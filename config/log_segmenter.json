{
    "segment_rules": [
        {
            "name": "unity_error",
            "start_pattern": "^Error",
            "end_pattern": "^(?:Build|Error|Warning|Note)",
            "include_end": false
        },
        {
            "name": "unity_warning",
            "start_pattern": "^Warning",
            "end_pattern": "^(?:Build|Error|Warning|Note)",
            "include_end": false
        },
        {
            "name": "unity_build_step",
            "start_pattern": "^Build",
            "end_pattern": "^(?:Build|Error|Warning|Note)",
            "include_end": false
        }
    ],
    "min_segment_lines": 1,
    "max_segment_lines": 50
}